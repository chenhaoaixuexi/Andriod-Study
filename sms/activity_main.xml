<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    app:orientation="vertical"
    app:layout_width="match_parent"
    app:layout_height="match_parent"
    app:background="@color/colorPrimary"
    tools:ignore="NamespaceTypo">
    <RelativeLayout
        app:layout_width="match_parent"
        app:layout_height="wrap_content">
     <TextView
         app:layout_width="100dp"
         app:layout_height="wrap_content"
         app:text="@string/number"
         app:id="@+id/numberlabel"
         />
        <EditText
            app:layout_width="match_parent"
            app:layout_height="wrap_content"
            app:id="@+id/number"
            app:layout_toRightOf="@id/numberlabel"
            app:layout_alignTop="@id/numberlabel"
            app:layout_marginLeft="5dp"
            />
    </RelativeLayout>

    <TextView
        app:layout_width="match_parent"
        app:layout_height="wrap_content"
        app:text="@string/content"
        />
    <EditText
        app:layout_width="match_parent"
        app:layout_height="wrap_content"
        app:minLines="3"
        app:id="@+id/content"
        />
    <Button
        app:layout_width="wrap_content"
        app:layout_height="wrap_content"
        app:text="@string/button"
        app:id="@+id/button"
        />

</LinearLayout>
