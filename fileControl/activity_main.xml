<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    app:orientation="vertical"
    app:layout_width="match_parent"
    app:layout_height="match_parent"
    tools:ignore="NamespaceTypo">
    <RelativeLayout
        app:layout_width="match_parent"
        app:layout_height="wrap_content">
        <TextView
            app:layout_width="100dp"
            app:layout_height="wrap_content"
            app:text="@string/filename"
            />
        <EditText
            app:layout_width="match_parent"
            app:layout_height="wrap_content"
            app:id="@+id/filename"
            />
    </RelativeLayout>
        <TextView
            app:layout_width="match_parent"
            app:layout_height="wrap_content"
            app:text="@string/filecontent"
            />
        <EditText
            app:layout_width="match_parent"
            app:layout_height="wrap_content"
            app:minLines="3"
            app:id="@+id/filecontent"
            />
        <Button
            app:layout_width="match_parent"
            app:layout_height="wrap_content"
            app:text="@string/button"
            app:id="@+id/button"
            />
</LinearLayout>
